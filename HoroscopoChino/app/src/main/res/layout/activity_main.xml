<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rayas.jorge.horoscopochino.MainActivity">

    <ImageButton
        android:id="@+id/btnBuey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnBueyOnClick"
        app:srcCompat="@drawable/buey"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnCaballo"
        android:layout_marginRight="8dp"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />

    <ImageButton
        android:id="@+id/btnCaballo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnCaballoOnClick"
        app:srcCompat="@drawable/caballo"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/btnCabra"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:onClick="btnCabraOnClick"
        app:srcCompat="@drawable/cabra"
        app:layout_constraintLeft_toRightOf="@+id/btnCaballo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />

    <ImageButton
        android:id="@+id/btnDragon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnDragonOnClick"
        app:srcCompat="@drawable/dragon"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnGallo"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBuey" />

    <ImageButton
        android:id="@+id/btnGallo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnGalloOnClick"
        app:srcCompat="@drawable/gallo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCaballo" />

    <ImageButton
        android:id="@+id/btnGato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnGatoOnClick"
        app:srcCompat="@drawable/gato"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnGallo"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCabra" />

    <ImageButton
        android:id="@+id/btnJabali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnJabaliOnClick"
        app:srcCompat="@drawable/jabali"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnMono"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDragon" />

    <ImageButton
        android:id="@+id/btnMono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnMonoOnClick"
        app:srcCompat="@drawable/mono"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGallo" />

    <ImageButton
        android:id="@+id/btnPerro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnPerroOnClick"
        app:srcCompat="@drawable/perro"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnMono"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGato" />

    <ImageButton
        android:id="@+id/btnRata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnRataOnClick"
        app:srcCompat="@drawable/rata"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnSerpiente"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnJabali" />

    <ImageButton
        android:id="@+id/btnSerpiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSerpienteOnClick"
        app:srcCompat="@drawable/serpiente"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMono" />

    <ImageButton
        android:id="@+id/btnTigre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnTigreOnClick"
        app:srcCompat="@drawable/tigre"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnSerpiente"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPerro" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        android:text="HorÃ³scopo Chino"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
